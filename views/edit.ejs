<%- include("partials/header") %>
<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Edit Hotel</h1>
        <form action="/hotels/<%= hotel._id %>?_method=PUT" method="POST">
            <div class="mb-3">
                <label>Name</label>
                <input class="form-control" type="text" name="hotel[name]" value="<%= hotel.name %>">
            </div>
            <div class="mb-3">
                <label>Price</label>
                <input class="form-control" type="number" name="hotel[price]" value="<%= hotel.price %>">
            </div>
            <div class="mb-3">
                <label>Description</label>
                <input class="form-control" type="text" name="hotel[description]" value="<%= hotel.description %>">
            </div>
            <button class="btn btn-warning w-100">Update Hotel</button>
        </form>
    </div>
</div>
<%- include("partials/footer") %>