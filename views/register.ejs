<%- include("partials/header") %>
<div class="container mt-5">
    <h1 class="text-center">Sign Up</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/register" method="POST">
                <div class="mb-3"><input class="form-control" type="text" name="username" placeholder="username"></div>
                <div class="mb-3"><input class="form-control" type="password" name="password" placeholder="password"></div>
                <div class="mb-3"><input class="form-control" type="text" name="adminCode" placeholder="Admin Code (Optional)"></div>
                <div class="form-text mb-3">Type 'secret123' to become an Admin</div>
                <button class="btn btn-success w-100">Sign Up</button>
            </form>
        </div>
    </div>
</div>
<%- include("partials/footer") %>