<%- include("partials/header") %>
<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">Create New Hotel</h1>
        <form action="/hotels" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <input class="form-control" type="text" name="name" placeholder="Hotel Name" required>
            </div>
            <div class="mb-3">
                <label>Upload Image</label>
                <input class="form-control" type="file" name="image" required>
            </div>
            <div class="mb-3">
                <input class="form-control" type="number" name="price" placeholder="Price per night" required>
            </div>
            <div class="mb-3">
                <input class="form-control" type="number" name="totalRooms" placeholder="Total Rooms" min="1" value="10" required>
            </div>
            <div class="mb-3">
                <input class="form-control" type="text" name="amenities" placeholder="Amenities (comma separated, e.g., WiFi, Pool, Gym)">
            </div>
            <div class="mb-3">
                <textarea class="form-control" name="description" placeholder="Description" rows="3"></textarea>
            </div>
            <button class="btn btn-primary w-100">Submit!</button>
        </form>
    </div>
</div>
<%- include("partials/footer") %>